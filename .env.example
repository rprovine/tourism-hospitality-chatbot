# ===========================================
# Hawaii Business Intelligence System
# Environment Variables Configuration
# ===========================================

# --------------------------------------------
# DATABASE (Required)
# --------------------------------------------
# PostgreSQL connection string (Supabase, Neon, or self-hosted)
DATABASE_URL="postgresql://user:password@host:5432/dbname?sslmode=require"
# Direct connection URL (for migrations)
DIRECT_URL="postgresql://user:password@host:5432/dbname?sslmode=require"

# --------------------------------------------
# AUTHENTICATION (Required)
# --------------------------------------------
# Your deployed URL (https://yourdomain.com in production)
NEXTAUTH_URL="http://localhost:3000"
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-32-character-secret-here"

# --------------------------------------------
# AI PROVIDERS (Required)
# --------------------------------------------
# OpenAI API Key (Required for GPT-5)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-..."

# Anthropic Claude API Key (Optional - for premium features)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY="sk-ant-..."

# --------------------------------------------
# PAYMENT PROCESSING (Required for production)
# --------------------------------------------
# Stripe API Keys
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
# Webhook secret from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET="whsec_..."

# Subscription Price IDs (from Stripe Dashboard)
STRIPE_PRICE_STARTER_MONTHLY="price_..."
STRIPE_PRICE_PROFESSIONAL_MONTHLY="price_..."
STRIPE_PRICE_PREMIUM_MONTHLY="price_..."
STRIPE_PRICE_ENTERPRISE_MONTHLY="price_..."

# --------------------------------------------
# EMAIL (Optional but recommended)
# --------------------------------------------
# SMTP Configuration
EMAIL_SERVER="smtp://user:pass@smtp.example.com:587"
EMAIL_FROM="Hawaii AI <noreply@yourdomain.com>"

# Or use a service like SendGrid:
# SENDGRID_API_KEY="SG...."

# --------------------------------------------
# ANALYTICS (Optional)
# --------------------------------------------
# Google Analytics
NEXT_PUBLIC_GA_ID="G-..."

# Vercel Analytics (auto-configured on Vercel)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID="..."

# --------------------------------------------
# EXTERNAL INTEGRATIONS (Optional)
# --------------------------------------------
# HubSpot (for CRM integration)
HUBSPOT_API_KEY="..."
HUBSPOT_PORTAL_ID="..."

# Twilio (for SMS notifications)
TWILIO_ACCOUNT_SID="AC..."
TWILIO_AUTH_TOKEN="..."
TWILIO_PHONE_NUMBER="+1..."

# --------------------------------------------
# FEATURE FLAGS (Optional)
# --------------------------------------------
# Enable/disable features
NEXT_PUBLIC_ENABLE_DEMO="true"
NEXT_PUBLIC_ENABLE_ANALYTICS="true"
NEXT_PUBLIC_ENABLE_CHAT_RATING="true"
NEXT_PUBLIC_MAINTENANCE_MODE="false"

# --------------------------------------------
# RATE LIMITING (Optional)
# --------------------------------------------
# API rate limits (requests per minute)
RATE_LIMIT_CHAT="60"
RATE_LIMIT_API="100"
RATE_LIMIT_AUTH="10"

# --------------------------------------------
# SECURITY (Optional but recommended)
# --------------------------------------------
# Content Security Policy
CSP_REPORT_URI="https://yourdomain.com/api/csp-report"

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS="https://yourdomain.com,https://app.yourdomain.com"

# --------------------------------------------
# DEVELOPMENT (Local only)
# --------------------------------------------
# Skip authentication in development
NEXT_PUBLIC_SKIP_AUTH="false"
# Enable debug logging
DEBUG="true"
# Mock Stripe payments
MOCK_PAYMENTS="false"